<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.abhi.gk"
    android:versionCode="6"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".UserPreferenceSetting"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name=".Test_questions"
            android:configChanges="orientation"
            android:label="@string/title_activity_test_questions" >
        </activity>
        <activity
            android:name=".ViewScore"
            android:label="@string/title_activity_view_score" >
        </activity>
        <activity
            android:name=".ViewAnswers"
            android:label="@string/title_activity_view_answers" >
        </activity>
        <activity
            android:name=".Splashstart"
            android:label="@string/title_activity_splashstart"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>     
        <activity
            android:name=".UserSettingActivity" />   
        <activity android:name="com.google.ads.AdActivity"
              android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"/>     
    </application>
	<uses-permission android:name="android.permission.INTERNET" ></uses-permission>
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"></uses-permission>
</manifest>